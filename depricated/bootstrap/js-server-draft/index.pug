doctype html
html
    head
        script(src="/client.js")
        style(type="text/css").

            button, input, textarea{
                border:none;
                background-image:none;
                background-color:transparent;
                -webkit-box-shadow: none;
                -moz-box-shadow: none;
                box-shadow: none;
            }


            .container{
                height: 100vh;
                width: 100%;
                display: flex;
                flex-direction: column;
                align-items: center;

            }

            .manifest-magnet {
                padding: 10px;
                margin: 0 10px 0 0 ;
                border: 1px solid #e2e2e2;
                border-radius: 5px;
            }

            .btn{
                padding: 10px;
                border-radius: 5px;
                border: 1px solid #e2e2e2;
                cursor: pointer;
            }

            .btn:hover{
                background-color: #e2e2e2

                }

            .wrapper{
                margin-top: 10%;
                display: flex;
                flex-direction: row;

            }


    body
        .container
            .wrapper
                input.manifest-magnet#magnet(placeholder="Manifest magnet")
                .btn#bootstrap Bootstrap

